generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts Account[]
  sessions Session[]

  marketingConsent   Boolean   @default(false)
  marketingConsentAt DateTime?
  unsubscribedAt     DateTime?

  subscription Subscription?

  role                  String    @default("user")
  onboardingCompletedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscription {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  status               String  @default("FREE") // FREE | TRIAL | ACTIVE | PAST_DUE | CANCELED
  stripeCustomerId     String?
  stripeSubscriptionId String?

  trialEndsAt       DateTime?
  currentPeriodEnd  DateTime?
  cancelAtPeriodEnd Boolean   @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([stripeCustomerId])
  @@index([stripeSubscriptionId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Folder {
  id      String @id @default(cuid())
  name    String
  ownerId String // email

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members       FolderMember[]
  items         FolderItem[]
  evaluations   Evaluation[]
  notifications Notification[]
  meetings      Meeting[] // âœ… opposite relation for Meeting.folder
}

model FolderMember {
  folderId  String
  userEmail String
  role      String   @default("viewer") // viewer | editor
  createdAt DateTime @default(now())

  folder Folder @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@id([folderId, userEmail])
  @@index([userEmail])
}

model FolderItem {
  id        String   @id @default(cuid())
  folderId  String
  type      String
  title     String
  content   String
  createdBy String?
  createdAt DateTime @default(now())

  // nullable + default: ok existing rows
  updatedAt DateTime? @default(now())

  folder Folder @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@index([folderId])
  @@index([folderId, type])
}

model Evaluation {
  id         String   @id @default(cuid())
  folderId   String
  subject    String
  evaluator  String
  sportLabel String
  data       String
  createdAt  DateTime @default(now())

  folder Folder @relation(fields: [folderId], references: [id], onDelete: Cascade)

  @@index([folderId])
}

model Notification {
  id        String    @id @default(cuid())
  userEmail String
  folderId  String?
  title     String
  body      String
  href      String?
  readAt    DateTime?
  createdAt DateTime  @default(now())

  folder Folder? @relation(fields: [folderId], references: [id], onDelete: SetNull)

  @@index([userEmail])
}

model Student {
  id      String @id @default(cuid())
  ownerId String // email
  name    String
  sportId String @default("football") // football | dance
  notes   String @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
  @@index([ownerId, sportId])
}

model Meeting {
  id       String @id @default(cuid())
  folderId String
  folder   Folder @relation(fields: [folderId], references: [id], onDelete: Cascade)

  title    String
  startsAt DateTime
  endsAt   DateTime?
  location String?   @default("")

  agenda String @default("")
  notes  String @default("")

  createdBy String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([folderId])
  @@index([startsAt])
}
